@model ContosoWebApp.Controllers.HomeController.HomeViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>Contoso WebApp</title>
    <link href="http://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css" type="text/css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header">
                    <h1>Contoso WebApp</h1>
                </div>
                @if (Model.Success)
                {
                    <div class="alert alert-success">
                        <strong>Success!</strong>
                    </div>
                }
                else
                {
                    if (Model.Message != null)
                    {
                        <div class="alert alert-danger">
                            <strong>@Model.Message</strong>
                        </div>
                    }
                    using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label>User name:</label>
                            @Html.TextBox("userName", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            @Html.Password("password", null, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</body>
</html>